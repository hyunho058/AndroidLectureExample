<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="예제입니다"
            android:background="@color/colorYellow"
            android:gravity="center"
            android:textSize="10pt"/>

        <Button
            android:id="@+id/btnLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buton1"/>
        <Button
            android:id="@+id/btn_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="btn_widget"/>
        <Button
            android:id="@+id/btn_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="btn_image"/>
        <Button
            android:id="@+id/btnActivityEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ActivityEvent"/>
        <Button
            android:id="@+id/btnSwipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe"/>
        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SendMsg"/>
        <Button
            android:id="@+id/btnPull"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="btnPull"/>
        <Button
            android:id="@+id/btnANR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="btnANR"/>
        <Button
            android:id="@+id/btnCounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Counter_Thread"/>
        <Button
            android:id="@+id/btnCounterProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Counter_Thread_ProgressBar"/>
        <Button
            android:id="@+id/btnCounterPHandler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Counter_Thread_Handler"/>
        <Button
            android:id="@+id/btnBookSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BookSearch"/>
        <Button
            android:id="@+id/btnBookSearch_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BookSearchDetail"/>
        <Button
            android:id="@+id/dbtnImplicitIntent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Implicit Itent"/>
        <Button
            android:id="@+id/btnService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ServiceLifcycle"/>
        <Button
            android:id="@+id/btnServiceDataSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ServiceDataSend"/>
        <Button
            android:id="@+id/btnkakaoBookSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KAKAO"/>
        <Button
            android:id="@+id/btnBroadcastReceiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BroadcastReceiver"/>
        <Button
            android:id="@+id/btnSMS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SMS Broadcast Receiver"/>
        <Button
            android:id="@+id/btnNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Broadcast Receiver를 이용한 알림"/>
        <Button
            android:id="@+id/btnSQLite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SQLite Basic"/>
    </LinearLayout>
</ScrollView>